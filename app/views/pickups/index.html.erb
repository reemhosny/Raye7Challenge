<p id="notice"><%= notice %></p>

<h1>Pickups</h1>

<table>
  <thead>
    <tr>
      <%# <th>Passenger</th>
      <th>Mobile</th> %>
      <th>Source</th>
      <th>Destination</th>
      <th>Departure time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pickups.each do |pickup| %>
      <tr>
        <%# <td><%= pickup.user.full_name%></td>  %>
        <%# <td><%= pickup.user.phone %></td>  %>
        <td><%= pickup.source %></td>
        <td><%= pickup.destination %></td>
        <td><%= pickup.departure_time %></td>
        <td><%= link_to 'Show', pickup %></td>
        <td><%= link_to 'Edit', edit_pickup_path(pickup) %></td>
        <td><%= link_to 'Destroy', pickup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

