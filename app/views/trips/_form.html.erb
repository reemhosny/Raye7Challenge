      <ul>
      <% trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
      <h4><%= form.label :Name %></h4>
      <%= form.text_field :full_name %>  
