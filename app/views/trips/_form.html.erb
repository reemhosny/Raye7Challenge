      <h4><%= form.label :Mobile %></h4>
      <%= form.text_field :phone_number %>  
  </div>
  
  <div class="field">
    <%= form.label :source %>
    <%= form.text_field :source, id: :trip_source %>
  </div>

  <div class="field">
    <%= form.label :destination %>
    <%= form.text_field :destination, id: :trip_destination %>
  </div>

  <div class="field">
    <%= form.label :departure_time %>
    <%= form.number_field :departure_time, id: :trip_departure_time %>
  </div>

  <div class="field">
    <%= form.label :numberOfSeats %>
    <%= form.number_field :numberOfSeats, id: :trip_numberOfSeats %>
  </div>

