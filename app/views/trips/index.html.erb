<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table class="table">
  <thead>
    <tr>
      <th>Driver</th>
      <th>Mobile</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Departure time</th>
      <th>Numberofseats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.user.full_name%></td>
        <td><%= trip.user.phone_number%></td> 
        <td><%= trip.source %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.departure_time %></td>
        <td><%= trip.numberOfSeats %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

